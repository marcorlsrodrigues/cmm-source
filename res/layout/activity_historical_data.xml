<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appstudio.mrodrigues.temperatureapp.HistoricalDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearHistoricalData"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_caption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:text="Date"/>

        <TextView
            android:id="@+id/degree_caption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/date_caption"
            android:text="Temperature"
            android:padding="18dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/level_caption"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/degree_caption"
            android:text="Level"
            android:padding="18dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/power_caption"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/level_caption"
            android:text="Power"
            android:padding="18dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearHistoricalData"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listHistorical">
        </ListView>
    </LinearLayout>

</RelativeLayout>
